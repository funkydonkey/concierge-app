# OpenAI API Key
OPENAI_API_KEY=sk-...

# GitHub Configuration (for Obsidian vault access)
GITHUB_TOKEN=ghp_...
GITHUB_REPO_OWNER=your-username
GITHUB_REPO_NAME=obsidian-vault
GITHUB_BRANCH=main

# Google Calendar Configuration (optional)
# Leave empty to disable calendar integration
# To enable: Create a Service Account in Google Cloud Console
# Download credentials JSON and paste as single-line string
# Example: GOOGLE_CALENDAR_CREDENTIALS_JSON='{"type":"service_account","project_id":"...","private_key":"..."}'
GOOGLE_CALENDAR_CREDENTIALS_JSON=
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_TIMEZONE=Europe/Berlin

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# Server Configuration (for Render.com deployment)
PORT=8000
